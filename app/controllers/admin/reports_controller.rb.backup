    private

    def determine_gender_from_db(member)
      # Ahora usamos el campo gender directamente de la base de datos
      return member.gender if member.gender.present?
      
      # Fallback en caso de que no est√© definido
      return 'masculino'
    end

    def get_specific_education_grade(child, age)
      # Si tiene grado espec√≠fico registrado, usar ese
      if child.specific_grade.present?
        case child.specific_grade
        when '1er_grado'
          return '1ER GRADO'
        when '2do_grado'
          return '2DO GRADO'
        when '3er_grado'
          return '3ER GRADO'
        when '4to_grado'
          return '4TO GRADO'
        when '5to_grado'
          return '5TO GRADO'
        when '6to_grado'
          return '6TO GRADO'
        when '1er_a√±o'
          return '1ER A√ëO'
        when '2do_a√±o'
          return '2DO A√ëO'
        when '3er_a√±o'
          return '3ER A√ëO'
        when '4to_a√±o'
          return '4TO A√ëO'
        when '5to_a√±o'
          return '5TO A√ëO'
        else
          return child.specific_grade.gsub('_', ' ').upcase
        end
      end
      
      # Si no, usar el mapeo autom√°tico por edad (m√©todo anterior)
      return map_excel_education_level(child.education_level, age)
    end

    def map_education_level(level, age)
      return 'N/A' if level.blank?
      
      case level.downcase
      when 'preescolar'
        age < 3 ? 'MATERNAL' : "#{age - 2}¬∞ NIVEL"
      when 'primaria'
        case age
        when 6..7
          '1ER GRADO'
        when 7..8
          '2DO GRADO'
        when 8..9
          '3ER GRADO'
        when 9..10
          '4TO GRADO'
        when 10..11
          '5TO GRADO'
        when 11..12
          '6TO GRADO'
        else
          'PRIMARIA'
        end
      when 'secundaria', 'bachillerato'
        case age
        when 12..13
          '1ER A√ëO'
        when 13..14
          '2DO A√ëO'
        when 14..15
          '3ER A√ëO'
        when 15..16
          '4TO A√ëO'
        when 16..17
          '5TO A√ëO'
        else
          'SECUNDARIA'
        end
      when 'universitario'
        'UNIVERSITARIO'
      when 'tecnico'
        'T√âCNICO'
      when 'postgrado'
        'POSTGRADO'
      else
        level.upcase
      end
    end

    def map_excel_education_level(level, age)
      return 'N/A' if level.blank?
      
      # Mapeo exacto como aparece en el Excel
      case level.downcase
      when 'maternal'
        'MATERNAL'
      when 'preescolar'
        case age
        when 0..2
          'MATERNAL'
        when 3
          '1ER NIVEL'
        when 4
          '2DO NIVEL'
        when 5
          '3ER NIVEL'
        else
          'PREESCOLAR'
        end
      when 'primaria'
        case age
        when 6
          '1ER GRADO'
        when 7
          '2DO GRADO'
        when 8
          '3ER GRADO'
        when 9
          '4TO GRADO'
        when 10
          '5TO GRADO'
        when 11
          '6TO GRADO'
        else
          'PRIMARIA'
        end
      when 'secundaria', 'bachillerato'
        case age
        when 12
          '1ER A√ëO'
        when 13
          '2DO A√ëO'
        when 14
          '3ER A√ëO'
        when 15
          '4TO A√ëO'
        when 16
          '5TO A√ëO'
        else
          'BACHILLERATO'
        end
      when 'universitario'
        'UNIVERSITARIO'
      when 'tecnico'
        'T√âCNICO'
      when 'postgrado'
        'POSTGRADO'
      else
        level.upcase
      end
    end


