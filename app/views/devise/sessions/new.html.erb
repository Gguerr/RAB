<div class="admin-login-container">
  <div class="login-card">
    <div class="logo-container">
      <%= image_tag "logo_Rab.png", alt: "RAB Logo", class: "logo" %>
    </div>
    
    <h2 class="login-title">Panel Administrativo</h2>
    <p class="login-subtitle">Ingrese sus credenciales para acceder</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
      <div class="form-group">
        <%= f.label :email, "Correo Electrónico", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input", placeholder: "admin@ejemplo.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Contraseña", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input", placeholder: "••••••••" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group checkbox-group">
          <%= f.check_box :remember_me, class: "form-checkbox" %>
          <%= f.label :remember_me, "Recordarme", class: "checkbox-label" %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "Iniciar Sesión", class: "btn btn-primary btn-login" %>
      </div>
    <% end %>

  </div>
</div>

<style>
  /* Reset básico */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    overflow-x: hidden;
  }

  .admin-login-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #dc2626 0%, #4a5568 100%);
    padding: 20px;
    overflow: hidden;
  }

  .login-card {
    background: white;
    padding: 3rem 3.5rem;
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    width: 100%;
    max-width: 550px;
    text-align: center;
    position: relative;
  }

  .logo-container {
    margin-bottom: 1.5rem;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .logo {
    max-width: 100px;
    height: auto;
    border-radius: 8px;
    display: block;
    margin: 0 auto;
  }

  .login-title {
    color: #4A5568;
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: -0.025em;
  }

  .login-subtitle {
    color: #718096;
    font-size: 0.875rem;
    margin-bottom: 2rem;
    font-weight: 400;
  }

  .login-form {
    text-align: left;
  }

  .form-group {
    margin-bottom: 1.25rem;
  }

  .form-label {
    display: block;
    font-weight: 600;
    color: #2D3748;
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
  }

  .form-input {
    width: 100%;
    padding: 0.875rem 1rem;
    border: 2px solid #E2E8F0;
    border-radius: 8px;
    font-size: 0.95rem;
    transition: all 0.2s ease;
    background-color: #FAFAFA;
  }

  .form-input:focus {
    outline: none;
    border-color: #dc2626;
    box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1);
    background-color: white;
  }

  .checkbox-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .form-checkbox {
    width: auto !important;
    margin: 0;
    accent-color: #dc2626;
  }

  .checkbox-label {
    margin: 0;
    font-weight: 400;
    color: #4A5568;
    font-size: 0.875rem;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .btn-primary {
    background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
    color: white;
  }

  .btn-login {
    width: 100%;
    padding: 1rem;
    font-size: 1rem;
    letter-spacing: 0.025em;
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #b91c1c 0%, #991b1b 100%);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.25);
  }

</style>

