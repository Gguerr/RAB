    border-bottom: 1px solid #f3f4f6;
  }

  .calc-label {
    color: var(--gray-lead);
    font-weight: 500;
  }

  .calc-value {
    color: var(--gray-lead-dark);
    font-weight: 600;
  }

  .status-badge .status {
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .status.upcoming {
    background: #dbeafe;
    color: var(--blue);
  }

  .status.current {
    background: #d1fae5;
    color: var(--green);
  }

  .status.expired {
    background: #fee2e2;
    color: var(--red-primary);
  }

  .vacation-tips {
