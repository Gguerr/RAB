<% content_for :page_title, "Editar Usuario" %>

<div class="max-w-4xl mx-auto space-y-6">
  <!-- Header -->
  <div class="bg-white rounded-lg shadow-sm p-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <div class="flex-shrink-0 h-12 w-12">
          <div class="h-12 w-12 rounded-full bg-wine-primary flex items-center justify-center">
            <span class="text-white font-semibold">
              <%= @user.first_name[0]&.upcase %><%= @user.last_name[0]&.upcase %>
            </span>
          </div>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">‚úèÔ∏è Editar Usuario</h1>
          <p class="text-gray-600"><%= @user.full_name %> - <%= @user.email %></p>
        </div>
      </div>
      <div class="flex space-x-3">
        <%= link_to admin_user_path(@user), 
            class: "inline-flex items-center px-4 py-2 bg-gray-600 text-white font-medium rounded-lg hover:bg-gray-700 transition-colors" do %>
          üëÅÔ∏è Ver Detalles
        <% end %>
        <%= link_to admin_users_path, 
            class: "inline-flex items-center px-4 py-2 bg-gray-600 text-white font-medium rounded-lg hover:bg-gray-700 transition-colors" do %>
          ‚Üê Volver
        <% end %>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="bg-white rounded-lg shadow-sm p-6">
    <%= form_with model: [:admin, @user], local: true, class: "space-y-6" do |form| %>
      
      <!-- Display errors if any -->
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <span class="text-red-400 text-xl">‚ö†Ô∏è</span>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                Se encontraron <%= pluralize(@user.errors.count, "error") %>:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Personal Information -->
      <div class="bg-gray-50 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">üë§ Informaci√≥n Personal</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :first_name, "Nombre *", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :first_name, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wine-primary focus:border-transparent" %>
          </div>

          <div>
            <%= form.label :last_name, "Apellido *", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :last_name, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wine-primary focus:border-transparent" %>
          </div>

          <div>
            <%= form.label :email, "Email *", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wine-primary focus:border-transparent" %>
          </div>

          <div>
            <%= form.label :phone, "Tel√©fono", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.tel_field :phone, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wine-primary focus:border-transparent" %>
          </div>
        </div>
      </div>

      <!-- Account Status -->
      <div class="bg-gray-50 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">üîê Estado de la Cuenta</h3>
        <div class="space-y-4">
          <div class="flex items-center">
            <%= form.check_box :active, 
                { class: "h-4 w-4 text-wine-primary focus:ring-wine-primary border-gray-300 rounded" },
                true, false %>
            <%= form.label :active, "Usuario activo", class: "ml-2 block text-sm text-gray-900" %>
          </div>
          <p class="text-sm text-gray-500">Los usuarios inactivos no pueden iniciar sesi√≥n en el sistema</p>
        </div>
      </div>

      <!-- Password Change -->
      <div class="bg-gray-50 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">üîí Cambiar Contrase√±a</h3>
        <p class="text-sm text-gray-600 mb-4">Deja estos campos vac√≠os si no quieres cambiar la contrase√±a</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :password, "Nueva Contrase√±a", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.password_field :password, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wine-primary focus:border-transparent",
                placeholder: "Dejar vac√≠o para no cambiar" %>
            <p class="mt-1 text-sm text-gray-500">M√≠nimo 6 caracteres si se especifica</p>
          </div>

          <div>
            <%= form.label :password_confirmation, "Confirmar Nueva Contrase√±a", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.password_field :password_confirmation, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wine-primary focus:border-transparent",
                placeholder: "Confirmar nueva contrase√±a" %>
          </div>
        </div>
      </div>

      <!-- Roles Assignment -->
      <div class="bg-gray-50 rounded-lg p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold text-gray-900">üîê Roles Asignados</h3>
          <%= link_to manage_roles_admin_user_path(@user), 
              class: "text-wine-primary hover:text-wine-secondary font-medium text-sm" do %>
            Gesti√≥n Avanzada ‚Üí
          <% end %>
        </div>
        <p class="text-sm text-gray-600 mb-4">Selecciona los roles que tendr√° este usuario</p>
        
        <% if @roles.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% @roles.each do |role| %>
              <div class="flex items-start space-x-3 p-4 border border-gray-200 rounded-lg hover:bg-white transition-colors">
                <div class="flex items-center h-5">
                  <%= check_box_tag "user[role_ids][]", role.id, @user_role_ids.include?(role.id), 
                      { class: "h-4 w-4 text-wine-primary focus:ring-wine-primary border-gray-300 rounded" } %>
                </div>
                <div class="flex-1 min-w-0">
                  <label class="text-sm font-medium text-gray-900 cursor-pointer">
                    <%= role.name.humanize %>
                  </label>
                  <% if role.description.present? %>
                    <p class="text-sm text-gray-500 mt-1"><%= role.description %></p>
                  <% end %>
                  <div class="flex items-center mt-2">
                    <span class="text-xs text-gray-500">
                      <%= role.permissions.count %> permisos
                    </span>
                    <% unless role.active? %>
                      <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                        Inactivo
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          
          <!-- Hidden field to handle empty selection -->
          <%= hidden_field_tag "user[role_ids][]", "" %>
          
        <% else %>
          <div class="text-center py-8 border-2 border-dashed border-gray-300 rounded-lg">
            <div class="text-gray-400 text-4xl mb-2">üîí</div>
            <p class="text-gray-500">No hay roles disponibles.</p>
          </div>
        <% end %>
      </div>

      <!-- Account Information (Read-only) -->
      <div class="bg-blue-50 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">üìä Informaci√≥n de la Cuenta</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <dt class="text-sm font-medium text-gray-500">Cuenta creada</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= l(@user.created_at, format: :short) %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">√öltimo acceso</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% if @user.last_sign_in_at %>
                <%= l(@user.last_sign_in_at, format: :short) %>
              <% else %>
                <span class="text-gray-500">Nunca</span>
              <% end %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Total de accesos</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user.sign_in_count || 0 %></dd>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
        <%= link_to admin_user_path(@user), 
            class: "px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors" do %>
          Cancelar
        <% end %>
        
        <%= form.submit "Actualizar Usuario", 
            class: "px-6 py-3 bg-wine-primary text-white font-medium rounded-lg hover:bg-wine-secondary transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>