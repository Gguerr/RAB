<style>
  :root {
    --red-primary: #dc2626;
    --red-secondary: #b91c1c;
    --red-light: #f87171;
    --red-dark: #991b1b;
    --gray-lead: #4a5568;
    --gray-lead-light: #718096;
    --gray-lead-dark: #2d3748;
    --gray-lead-lighter: #e2e8f0;
    --white: #ffffff;
    --text-primary: #2d3748;
    --text-secondary: #718096;
    --background-primary: #f7fafc;
    --background-secondary: #edf2f7;
  }

  .admin-dashboard {
    min-height: 100vh;
    background: linear-gradient(135deg, var(--background-primary) 0%, var(--background-secondary) 100%);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .dashboard-header {
    background: linear-gradient(90deg, var(--red-primary) 0%, var(--red-secondary) 100%);
    box-shadow: 0 4px 8px rgba(220, 38, 38, 0.2);
    padding: 1rem 0;
  }

  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo-section {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .header-logo {
    width: 50px;
    height: auto;
    border-radius: 8px;
  }

  .dashboard-title {
    color: var(--white);
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  .user-section {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .welcome-text {
    color: var(--white);
    font-weight: 500;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  .btn {
    padding: 0.5rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .btn-outline {
    background: transparent;
    border: 2px solid var(--white);
    color: var(--white);
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  .btn-outline:hover {
    background: var(--white);
    color: var(--red-primary);
    border-color: var(--white);
    text-shadow: none;
  }

  .dashboard-main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .dashboard-card {
    background: var(--white);
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 4px 12px rgba(74, 74, 74, 0.15);
    border: 1px solid var(--lead-gray-lighter);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .dashboard-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(220, 38, 38, 0.2);
    border-color: var(--red-light);
  }

  .card-icon {
    margin-bottom: 1rem;
  }

  .icon {
    font-size: 2rem;
    display: block;
  }

  .card-content h3 {
    color: var(--text-primary);
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
  }

  .card-number {
    color: var(--red-primary);
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
  }

  .card-description {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin: 0;
  }

  .dashboard-actions h2 {
    color: var(--text-primary);
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }

  .actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .action-btn {
    background: var(--white);
    border: 2px solid var(--lead-gray-lighter);
    border-radius: 12px;
    padding: 1.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 1rem;
    box-shadow: 0 2px 8px rgba(74, 74, 74, 0.1);
  }

  .action-btn:hover {
    border-color: var(--red-primary);
    background: var(--background-primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.15);
  }

  .action-icon {
    font-size: 1.5rem;
  }

  .action-text {
    color: var(--text-primary);
    font-weight: 600;
  }


  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .dashboard-main {
      padding: 1rem;
    }

    .dashboard-grid {
      grid-template-columns: 1fr;
    }

    .actions-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
